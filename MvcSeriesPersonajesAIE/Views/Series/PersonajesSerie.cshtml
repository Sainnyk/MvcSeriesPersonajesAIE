@model IEnumerable<MvcSeriesPersonajesAIE.Models.Personaje>

@{
    ViewData["Title"] = "PersonajesSerie";
}

<h1 style="text-align:center;color:mediumslateblue">Personajes</h1>
<br/>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
            <img src="@item.Imagen" width="80" height="100">
            </td>

        </tr>
}
    </tbody>
</table>

<br />

<a asp-action="ListadoSeries" style="color:mediumslateblue">Volver a Series</a>

